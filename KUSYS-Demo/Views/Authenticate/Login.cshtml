    <div class="login-form">
        <form asp-action="Login" method="post">
            <h2 class="text-center">Log in</h2>
            <div class="form-group">
                <input type="text" class="form-control" asp-for="Username" placeholder="Enter Username" required="required">
                <div class="msg">
                    <span class="err" asp-validation-for="Username"></span>
                </div>
            </div>


            <div class="form-group">
                <input type="password" class="form-control" asp-for="Password" placeholder="Enter Password" required="required">
                <div class="msg">
                    <span asp-validation-for="Password" class="err"></span>
                </div>
            </div>

            @if (TempData["msg"] != null)
            {
                <div class="msg">@TempData["msg"]</div>
            }

            <div class="form-group">
                <button type="submit" class="btn btn-primary btn-block">Log in</button>
            </div>
            <div class="clearfix">
                <label class="float-left form-check-label"><input type="checkbox"> Remember me</label>
                <a href="#" class="float-right">Forgot Password?</a>
            </div>
        </form>
        <p class="text-center"><a href="/Authenticate/SignUp">Create an Account</a></p>
    </div>

